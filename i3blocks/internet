#!/bin/sh

addr=$(lspci | grep Ethernet | awk '{print $1}')
eth_dev=$(ls /sys/bus/pci/devices/0000:${addr}/net)
ip=$(ip addr show dev ${eth_dev} | grep "inet [0-9]" | awk '{print $2}')
case $BLOCK_BUTTON in
	1) $TERMINAL -e nmtui ;;
	3) pgrep -x dunst >/dev/null && notify-send "<b>ğŸŒ Internet module:</b>
- Click for \`nmtui\` for wifi access
ğŸ“¡: no wifi connection
ğŸ“¶: wifi connection with quality
â: no ethernet
ğŸŒ: ethernet working
" ;;
esac

[ "$(cat /sys/class/net/e*/operstate)" = 'down' ] && wifiicon="ğŸ“¡"

[ ! -n "${wifiicon+var}" ] && wifiicon=$(grep "^\s*w" /proc/net/wireless | awk '{ print "ğŸ“¶", int($3 * 100 / 70) "%" }')

printf "%s %s" "$wifiicon" "$(cat /sys/class/net/e*/operstate | sed "s/down/â/;s/up/ğŸŒ/") ${ip}"
